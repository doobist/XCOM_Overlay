<Application x:Class="XCOM_Overlay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="xComHelper.xaml">
    
    <Application.Resources>
        <Style x:Key="XcomButtonStyle" TargetType="{x:Type Control}">
            <Setter Property="Background" Value="#cc204448" />
            <Setter Property="Foreground" Value="#FF46989E"/>
            <Setter Property="BorderBrush" Value="#FF46989E"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="75"/>
            <Setter Property="Height" Value="75"/>
        </Style>
        <Style x:Key="XcomButtonStyleSmaller" TargetType="{x:Type Control}">
            <Setter Property="Background" Value="#cc204448" />
            <Setter Property="Foreground" Value="#FF46989E"/>
            <Setter Property="BorderBrush" Value="#FF46989E"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="Height" Value="50"/>
        </Style>
    </Application.Resources>

</Application>

    